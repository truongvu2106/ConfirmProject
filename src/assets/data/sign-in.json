{
  "signin": {
    "type": "container",
    "title": "Sign in",
    "description": "Sign in page",
    "elements": {
      "pageTitle": {
        "type": "text",
        "title": "Sign On"
      },
      "username": {
        "type": "input",
        "hint": "User ID",
        "messages": {
          "required": "Please enter your User ID."
        }
      },
      "password": {
        "type": "input",
        "hint": "Password",
        "messages": {
          "required": "Please enter your password."
        }
      },
      "submit": {
        "type": "submit",
        "title": "Sign On"
      },
      "remember": {
        "type": "checkbox",
        "on": "Remember my User ID"
      },
      "forgotUsername": {
        "type": "text",
        "description": "<div class=\"mc-box-item mc-forget\"><a href=\"javascript:;\" routerLink=\"/users/forgot-user\">Forgot User ID?</a><a href=\"javascript:;\" routerLink=\"/users/forgot-password\">Forgot Password?</a></div>"
      }
    }
  }
}